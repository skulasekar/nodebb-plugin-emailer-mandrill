{
    "id": "nodebb-plugin-mandrill-emailer",
    "name": "Emailer (Mandrill)",
    "description": "Mandrill Emailer for NodeBB. Updated to work with 0.5.2",
    "url": "https://github.com/skulasekar/nodebb-plugin-emailer-mandrill.git",
    "library": "./index.js",
    "templates": "templates",
    "hooks": [
        { "hook": "action:email.send", "method": "send"},
        { "hook": "filter:admin.header.build", "method": "admin.menu"},
        { "hook": "static:app.load", "method": "init" }
    ]
}
